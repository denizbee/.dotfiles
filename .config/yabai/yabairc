# Placement
yabai -m config layout bsp
yabai -m config --space 4 layout float
yabai -m config window_placement second_child
yabai -m config mouse_follows_focus autoraise

# Padding
yabai -m config top_padding 10
yabai -m config left_padding 10
yabai -m config bottom_padding 10
yabai -m config right_padding 10
yabai -m config window_gap 10
# yabai -m config external_bar all:35:0

# Rules
yabai -m rule --add app="^(Finder|System Settings|System Information|Activity Monitor|FaceTime|Calculator|Transmission|Spotify)$" manage=off
yabai -m rule --add title='.*Welcome*.|Checkout*.|.*Configurations|Choose*.|Import*.|.*Charges|Tip*.|Rename*.|Settings' manage=off 
