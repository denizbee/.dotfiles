# Global Config
yabai -m config top_padding 10 \
                left_padding 10 \
                bottom_padding 10 \
                right_padding 10 \
                window_gap 10 \
                external_bar all:35:0 \
                layout bsp \
                window_placement second_child \
                mouse_follows_focus on
                

# Rules
yabai -m rule --add app="^(Finder|System Settings|System Information|Activity Monitor|FaceTime|Calculator|Transmission)$" manage=off 
yabai -m rule --add title='.*Welcome*.|Checkout*.|.*Configurations|Choose*.|Import*.|.*Charges|Tip*.|Rename*.|Settings' manage=off 
