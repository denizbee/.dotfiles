set clipboard+=unnamed
set clipboard+=ideaput
set relativenumber
set incsearch
set scrolloff=10
set ideajoin
set showmode

let mapleader=" "

sethandler <c-j> a:vim
sethandler <c-k> a:vim
sethandler <c-d> a:vim
sethandler <c-r> a:vim
sethandler <c-o> a:vim

noremap \e :e ~/.ideavimrc<CR>
nnoremap \r :action IdeaVim.ReloadVimRc.reload<CR>
nnoremap <leader>zm :action ToggleDistractionFreeMode<CR>
nnoremap <c-h> <c-w>h
nnoremap <c-l> <c-w>l
nnoremap <c-j> <c-w>j
nnoremap <c-k> <c-w>k
nnoremap <c-TAB> :action NextTab<CR>
nnoremap <c-s-TAB> :action PreviousTab<CR>
nnoremap q :action HideActiveWindow<CR>
nnoremap <Leader>x :action CloseContent<CR>

nnoremap ]d :action GotoNextError<CR>
nnoremap [d :action GotoPreviousError<CR>
nnoremap <leader>i :action ShowErrorDescription<CR>
nnoremap <leader>ca :action ShowIntentionActions<CR>
vnoremap < <gv
vnoremap > >gv
nnoremap <leader>/ :action CommentByLineComment<CR>
vnoremap gc :action CommentByLineComment<CR>
nnoremap <Leader>rn  :action RenameElement<CR>
nnoremap zc :action CollapseRegion<CR>
nnoremap zo :action ExpandRegion<CR>
nnoremap <leader>zc :action CollapseAllRegions<CR>
nnoremap <leader>zo :action ExpandAllRegions<CR>
nnoremap <leader>sf :action GotoFile<CR>
nnoremap <leader>sc :action GotoClass<CR>
nnoremap <leader>sg :action FindInPath<CR>
nnoremap <leader>f :action ReformatCode<CR>


nnoremap <c-d> <c-d>zz
nnoremap <c-u> <c-u>zz
nnoremap n nzzzv
nnoremap N Nzzzv

if has('ide')
    if &ide =~? 'intellij idea'
        nnoremap <leader>cnc :action NewClass<CR>
    elseif &ide =~? 'CLion'
        nnoremap <leader>cnc :action CIDR.Lang.Cpp.NewClass<CR>
        nnoremap <leader>cns :action CPP.NewCppFile<CR>
        nnoremap <leader>cnh :action CPP.NewHeaderFile<CR>
    endif
endif

Plug 'machakann/vim-highlightedyank'
Plug 'tpope/vim-commentary'
Plug 'easymotion/vim-easymotion'
Plug 'preservim/nerdtree'
Plug 'tpope/vim-surround'

nnoremap  <leader>e :NERDTreeToggle<CR>
